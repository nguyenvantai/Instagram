<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/lk1"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:background="#555555"
        android:onClick="onClickDelete">

        <ImageView android:id="@+id/imgv1"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/daunhan"></ImageView>
        <TextView android:id="@+id/tv12"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/imgv1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="PHOTO"
            android:textSize="25dp"
            android:textColor="#FFFFFF"></TextView>

    </RelativeLayout>
    <RelativeLayout android:id="@+id/lk2"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_below="@+id/lk1">
        <Button android:id="@+id/io1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rotate"></Button>
        <ImageView android:id="@+id/io2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/nhapnhay"></ImageView>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    </android.support.v4.view.ViewPager>
    <com.example.tai.istagram_project.SlidingTabLayout
        android:id="@+id/slidingTablayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
